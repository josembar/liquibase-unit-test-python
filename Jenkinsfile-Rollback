pipeline {
    agent any
    parameters {
        string(name: 'count', defaultValue: '1', description: 'Number of changesets to rollback')
    }
    stages {
        stage('Clear checksums') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        ./liquibase_clear_checksums.sh
                    '''
                }
            }
        }
        stage('Check rollback') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        liquibase rollback-count-sql \
                        --count=$count \
                        --classpath=$DRIVER_PATH_LIQUIBASE \
                        --url=jdbc:mysql://$DEMO_DB_HOST:3306/$DEMO_DB_NAME \
                        --changeLogFile=changelog.sql \
                        --username=$MYSQL_USER \
                        --password=$MYSQL_PASSWORD
                    '''
                }
            }
        }
        stage('Rollback') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        liquibase rollback-count \
                        --count=$count \
                        --classpath=$DRIVER_PATH_LIQUIBASE \
                        --url=jdbc:mysql://$DEMO_DB_HOST:3306/$DEMO_DB_NAME \
                        --changeLogFile=changelog.sql \
                        --username=$MYSQL_USER \
                        --password=$MYSQL_PASSWORD
                    '''
                }
            }
        }
    }
}
pipeline {
    agent any
    stages {
        stage('Clear checksums') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        liquibase clear-checksums \
                        --classpath=$LIQUIBASE_MYSQL_DRIVER_PATH \
                        --url=jdbc:mysql://$DEMO_DB_HOST:3306/$DEMO_DB_NAME \
                        --username=$MYSQL_USER \
                        --password=$MYSQL_PASSWORD
                    '''
                }
            }
        }
        stage('Check rollback') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        liquibase rollback-count-sql \
                        --count=1 \
                        --classpath=$LIQUIBASE_MYSQL_DRIVER_PATH \
                        --url=jdbc:mysql://$DEMO_DB_HOST:3306/$DEMO_DB_NAME \
                        --changeLogFile=changelog.xml \
                        --username=$MYSQL_USER \
                        --password=$MYSQL_PASSWORD
                    '''
                }
            }
        }
        stage('Rollback') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'mysql_credentials', passwordVariable: 'MYSQL_PASSWORD', usernameVariable: 'MYSQL_USER')]) {
                    sh '''
                        liquibase rollback-count \
                        --count=1 \
                        --classpath=$LIQUIBASE_MYSQL_DRIVER_PATH \
                        --url=jdbc:mysql://$DEMO_DB_HOST:3306/$DEMO_DB_NAME \
                        --changeLogFile=changelog.xml \
                        --username=$MYSQL_USER \
                        --password=$MYSQL_PASSWORD
                    '''
                }
            }
        }
    }
}